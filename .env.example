# ================================================================================================
# SERVER CONFIGURATION
# ================================================================================================
NODE_ENV=development
PORT=3000
APP_NAME=AutoService
APP_NAME_AR=أكفيك

# ================================================================================================
# DATABASE
# ================================================================================================
DATABASE_URL=mysql://user:password@localhost:3306/autoservice

# ================================================================================================
# JWT AUTHENTICATION
# ================================================================================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d

# ================================================================================================
# CORS
# ================================================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:19006

# ================================================================================================
# GOOGLE MAPS API (Distance Calculation)
# ================================================================================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ================================================================================================
# DELIVERY FEE CONFIGURATION
# ================================================================================================
DELIVERY_BASE_FEE=20
DELIVERY_PER_KM_RATE=2
DELIVERY_MAX_FEE=100

# ================================================================================================
# BROADCAST SETTINGS (Indrive Model)
# ================================================================================================
DEFAULT_BROADCAST_RADIUS=10
MAX_BROADCAST_RADIUS=50
BROADCAST_EXPIRY_MINUTES=30

# ================================================================================================
# PAYMENT GATEWAYS
# ================================================================================================
# Tap Payments (Saudi Arabia)
TAP_SECRET_KEY=sk_test_your_tap_secret_key
TAP_PUBLIC_KEY=pk_test_your_tap_public_key

# Moyasar (Saudi Arabia)
MOYASAR_SECRET_KEY=sk_test_your_moyasar_secret_key
MOYASAR_PUBLIC_KEY=pk_test_your_moyasar_public_key

# Stripe (International)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# ================================================================================================
# PUSH NOTIFICATIONS
# ================================================================================================
# Firebase Cloud Messaging
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# OneSignal (Alternative)
ONESIGNAL_API_KEY=your_onesignal_api_key
ONESIGNAL_APP_ID=your_onesignal_app_id

# ================================================================================================
# EMAIL NOTIFICATIONS
# ================================================================================================
# SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@autoservice.com
FROM_NAME=AutoService

# Mailgun (Alternative)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

# ================================================================================================
# SMS NOTIFICATIONS
# ================================================================================================
# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Unifonic (Saudi Arabia)
UNIFONIC_APP_SID=your_unifonic_app_sid
UNIFONIC_SENDER_ID=your_unifonic_sender_id

# ================================================================================================
# FILE UPLOAD
# ================================================================================================
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/quicktime

# AWS S3 (or compatible)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=autoservice-uploads

# ================================================================================================
# REDIS (Optional - for caching & job queues)
# ================================================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ================================================================================================
# LOGGING
# ================================================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ================================================================================================
# RATE LIMITING
# ================================================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================================================================================
# ADMIN CREDENTIALS (Initial Setup)
# ================================================================================================
ADMIN_EMAIL=admin@autoservice.com
ADMIN_PASSWORD=change_this_password
ADMIN_PHONE=+966500000000
